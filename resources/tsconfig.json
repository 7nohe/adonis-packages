{
  "extends": "../tsconfig.json",
  "include": ["env.d.ts", "./**/*.ts", "./**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "lib": ["DOM", "ESNext", "DOM.Iterable"],
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "types": ["vite/client"],
    "paths": {
      "@/*": ["./*"],
      "~/*": ["../*"]
    }
  },
  "exclude": ["dist", "node_modules"]
}
